<!-- Song Cover Info -->
<div class="box">
    <div class="songTitle">
        <h2>TITLE</h2>
        <p class="artist">ARTIST</p>

        <!-- Music Player -->
        <div id="player">
            <div class="player-process">

                <!-- Player Progress Bar -->
                <div class="d-flex flex-row progressbar">

                    <!-- Player Controls -->
                    <div class="controls">
                        <div class="play" onclick="playSong(this)"><i class="fas fa-play"></i></div>
                    </div> 

                    <!-- Song Duration -->
                    <div class="currentTime">0:00</div>
                    <div class="totalTime">0:00</div>
                </div>
            </div>
            
        </div>
    </div>
    
    <!-- Song Cover Image -->
    <div class=" songCover">
        <img class="cover" src="images/vinyl.jpg" alt="song or album cover image"/>
    </div>
</div>

<!-- Song Lyric -->
<div class="pb-5 align-items-center justify-content-center text-center lyrics">
    <!-- insert song lyric -->
</div>

<script src="./js/musicplayer.js"></script>